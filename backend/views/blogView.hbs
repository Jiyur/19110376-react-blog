<div style="margin-top: 2%;">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Blog</li>
    </ol>
  </nav>
  <h1 style="text-align: center;margin-top: 2%;">{{blog.title}}</h1>
  Nội dung
  <blockquote
    class="blog-content"
    style="word-wrap: break-word;
   background-color:#ebeced;
   border-radius: 10px;
   padding:10px;
   text-align:justify"
  >

    {{blog.content}}

  </blockquote>
  <div>
    <form method="POST" action="/blog/{{blog._id}}">
      <div class="form-group">
        <label for="comment-text">Bình luận</label>
        <textarea
          name="text"
          class="form-control"
          id="comment-text"
          rows="3"
          placeholder="Write your comment here"
          required
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary float-right">Gửi</button>
    </form>
  </div>
  <div class="card" style="width: 100%; margin-top:10%">
    <div class="card-header">
      Nhận xét
    </div>
    <ul class="list-group list-group-flush">
      {{#each comments}}
        <li class="list-group-item">{{this.text}}</li>

      {{/each}}
    </ul>
  </div>

</div>